        <script>
            var socket = io('http://192.168.10.10:3000');

            socket.on("test-channel:App\\Events\\NewNoteCreated", function(message){
                // increase the power everytime we load test route
                console.log(message);
            });

            var noteEditor = document.getElementsByClassName('note-editor')[0];

            var noteChangedTimeout;
            noteEditor.addEventListener('input', function () {
                clearTimeout(noteChangedTimeout);
                noteChangedTimeout = setTimeout(function () {
                    socket.emit('new_note', {_key: '{{ JWTAuth::fromUser(Auth::user()) }}', data: noteEditor.value});
                }, 700);
            });
        </script>
